<Page x:Class="DeviceRepairCRM.DeviceFrame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DeviceRepairCRM"
      mc:Ignorable="d" 
      d:DesignHeight="1052"
      d:DesignWidth="1512">

    <Grid Loaded="Grid_Loaded">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="310"/>
        </Grid.ColumnDefinitions>

        <TextBox
            Style="{StaticResource TextBoxBase}"
            Width="500" 
            Margin="10"
            Height="40" 
            Text="Поиск"
            HorizontalAlignment="Left"/>

        <ComboBox 
            Width="300"
            Margin="10"
            Height="40" 
            HorizontalAlignment="Right"
            Background="{StaticResource BGDarkColor}"
            FontSize="30"
            FontFamily="Segoe UI Black"
            SelectedIndex="0">
            <ComboBoxItem Content="производитель"/>
            <ComboBoxItem Content="Samsung"/>
            <ComboBoxItem Content="MI"/>
        </ComboBox>

        <ScrollViewer 
            VerticalScrollBarVisibility="Hidden"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="0">

            <WrapPanel 
                x:Name="DeviceList">
            </WrapPanel>
        </ScrollViewer>

        <ScrollViewer 
            VerticalScrollBarVisibility="Hidden" 
            Grid.Row="2" 
            Grid.Column="1">
            <StackPanel 
                x:Name="DevicePartList">
            </StackPanel>
        </ScrollViewer>

        <StackPanel 
            HorizontalAlignment="Left" 
            Grid.Row="1" 
            Grid.Column="1">
            <TextBlock 
                Style="{StaticResource TextBlockBase}"
                x:Name="DeviceName" 
                Text="Название телефона"/>
            
            <TextBlock 
                Style="{StaticResource TextBlockBase}"
                x:Name="DeviceArticle" 
                Text="Артикул телефона"/>
            
            <TextBlock 
                Style="{StaticResource TextBlockBase}"
                x:Name="DeviceReleaseYear"
                Text="Год релиза телефона" />
        </StackPanel>

        <Border Grid.Column="1" Height="60" Style="{StaticResource MainMenuBorder}">
            <Button x:Name="NewPartBt" 
                        Content="Новая деталь"
                        Style="{StaticResource MainMenuButton}"/>
        </Border>

        <TextBlock
            Grid.Row="0"
            Grid.RowSpan="3"
            Grid.Column="1"
            Background="{StaticResource BGPrimaryColor}"
            Panel.ZIndex="-1"/>
    </Grid>
</Page>
